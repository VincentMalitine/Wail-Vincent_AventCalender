<Page x:Class="Wail_Vincent_AventCalender.Ressources.Views.Card20"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wail_Vincent_AventCalender.Ressources.Views"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="220"
      Title="Card20">

    <Border Grid.Row="1"
            CornerRadius="16"
            BorderBrush="DarkGoldenrod"
            BorderThickness="2"
            Height="200"
            Width="220"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ClipToBounds="True"
            Background="Green">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Ressources/Images/20.png"
                       Width="150"
                       Height="150"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Top"
                       Margin="0,0,0,0"/>
                <TextBlock Text="Faites un câlin à"
                           Foreground="Black"
                           FontSize="15"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>
                <TextBlock Text="quelqu'un que vous aimez aujourd'hui !"
                           Foreground="Black"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
