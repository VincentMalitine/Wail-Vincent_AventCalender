<Page x:Class="Wail_Vincent_AventCalender.Ressources.Views.Card16"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wail_Vincent_AventCalender.Ressources.Views"
      mc:Ignorable="d" 
      d:DesignHeight="220" d:DesignWidth="220"
      Title="Card16">

    <Grid Background="Green">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,20">
            <Image Source="pack://application:,,,/Ressources/Images/16.png"
                   Width="150"
                   Height="150"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Margin="0,0,0,10"/>
            <TextBlock Text="La magie de Noël réside dans les petites choses."
                       Foreground="Black"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"/>
            <TextBlock Text="Qu'est-ce qui vous fait sourire aujourd'hui ?"
                       Foreground="Black"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
