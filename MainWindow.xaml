<Window x:Class="Wail_Vincent_AventCalender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wail_Vincent_AventCalender"
        mc:Ignorable="d"
         Foreground="{DynamicResource Theme_TextBrush}">

    <Window.Resources>
        <!-- THEME BRUSHES -->
        <SolidColorBrush x:Key="Red_BackgroundBrush" Color="#B00000" />
        <SolidColorBrush x:Key="Red_TextBrush" Color="White" />
        <SolidColorBrush x:Key="Green_BackgroundBrush" Color="#006B00" />
        <SolidColorBrush x:Key="Green_TextBrush" Color="White" />
        <SolidColorBrush x:Key="Gold_BackgroundBrush" Color="#D4AF37" />
        <SolidColorBrush x:Key="Gold_TextBrush" Color="#3C2510" />

        <SolidColorBrush x:Key="Theme_BackgroundBrush" Color="#B00000" />
        <SolidColorBrush x:Key="Theme_TextBrush" Color="White" />

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{DynamicResource Theme_TextBrush}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="Foreground" Value="#B00000"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource Theme_BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Centered Card Host -->
            <Border Grid.Row="1" Grid.Column="1" Width="280" Height="410" CornerRadius="16" Background="White" 
                    BorderBrush="#FFD32F2F" BorderThickness="4">
                <Grid Margin="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Top: Title -->
                    <TextBlock Name="CountDownTextBlock" 
                               FontSize="24" FontWeight="Bold" Foreground="#FFD32F2F" 
                               Margin="112,0,0,16" TextAlignment="Center" Grid.Row="0" HorizontalAlignment="Left"/>
                    <TextBlock Name="Days_until_Christmas" 
                               FontSize="14" FontWeight="SemiBold" Foreground="#FFD32F2F" 
                               Margin="112,0,0,16" TextAlignment="Center" Grid.Row="0" HorizontalAlignment="Left" 
                               Padding="0,32,0,0"/>
                    <!-- Middle: Card Placeholder (for future daily cards) -->
                    <ContentControl Grid.Row="1" x:Name="CardContentHost" Grid.ColumnSpan="2"/>
                    <!-- Bottom: Reveal Button -->
                    <Button Content="voir le message du jour " Grid.Row="2" Height="40" Width="200" 
                            Margin="12,16,0,0" HorizontalAlignment="Left" Background="#FFD32F2F" Foreground="White" Click="Button_TodayCard_Click" Grid.ColumnSpan="2"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="1" Grid.Column="1" 
                       FontSize="10" FontWeight="Light" Foreground="White" 
                       Margin="0,410,0,0" TextAlignment="Center" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Wail Vincent Avent Calender (Ver. 1.5)" Grid.RowSpan="2" Width="280"/>
        </Grid>
    </Grid>
</Window>
